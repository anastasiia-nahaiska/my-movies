{
  "expo": {
    "name": "My Movies",
    "slug": "my-movies",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/app-icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.mymovies"
    },
    "android": {
      "softwareKeyboardLayoutMode": "pan",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "config": {
        "usesCleartextTraffic": true
      },
      "package": "com.anonymous.mymovies"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#000000",
          "resizeMode": "contain",
          "image": "./src/assets/images/splash-icon.png",
          "imageWidth": 256
        }
      ],
      [
        "expo-font",
        {
          "fonts": ["./src/assets/fonts/OpenSans-Regular.ttf", "./src/assets/fonts/OpenSans-SemiBold.ttf"]
        }
      ],
      "expo-localization",
      "expo-build-properties",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "9d1ed9b2-2884-462a-90a1-3a4445978849"
      }
    }
  }
}
