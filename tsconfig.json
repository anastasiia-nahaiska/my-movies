{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@config/*": [
        "src/app/config/*"
      ],
      "@localization/*": [
        "src/app/localization/localization.ts"
      ],
      "@components/*": [
        "src/app/components/*"
      ],
      "@navigation/*": [
        "src/app/navigation/*"
      ],
      "@services/*": [
        "src/app/services/*"
      ],
      "@utils/*": [
        "src/app/utils/*"
      ],
      "@theme/*": [
        "src/app/theme/*"
      ],
      "@store/*": [
        "src/app/store/*"
      ],
      "@screens/*": [
        "src/app/store/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
